<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="chatModel"
            type="com.example.ksji833.ChatModel" />

        <import type="android.graphics.drawable.Drawable"/>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txtContactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="@{chatModel.name, default=Nothing}"
                    android:textColor="@color/primaryColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_below="@id/txtContactName"
                    android:layout_marginTop="8dp"
                    android:layout_alignStart="@id/txtContactName"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtmessagestatus"
                        android:layout_weight="1.5"
                        android:textSize="13dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{chatModel.lastMessage, default =Nothing}"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtChatDate"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{chatModel.date, default = Nothing}"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:elevation="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgContact"
            imageUrl="@{chatModel.avatar}"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{chatModel.online.equals(`online`)? @drawable/ic_online:@drawable/ic_offline}"
            app:layout_anchor="@id/imgContact"
            app:layout_anchorGravity="end|center"/>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>
</layout>