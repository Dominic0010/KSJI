<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="chatModel"
            type="com.example.ksji833.ChatListModel" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txtContactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@{ChatModel.name, default=Nothing}"
                    android:textColor="@color/primaryColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_below="@id/txtContactName"
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtmessagestatus"
                        android:layout_weight="1.5"
                        android:text_size="13dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtContactName"
                        android:layout_alignStart="@+id/txtContactName"
                        android:layout_marginTop="8dp"
                        android:text="@{chatModel.lastMessage, default =Nothing}"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtChatDate"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{chatModel.date, default = Nothing)}" />
                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgContact"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignTop="@+id/chat_container"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:elevation="10dp" />

    </RelativeLayout>
</layout>