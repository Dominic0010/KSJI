<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <variable
        name="UserInfoModel"
        type="com.example.ksji833.UserInfoModel" />
</data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/chat_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/light_white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/txtContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="@{UserInfoModel.name, default=Nothing}"
                android:textColor="@color/primaryColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContactStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtContactName"
                android:text="This App is going to be wonderful"
                android:layout_alignStart="@+id/txtContactName"
                android:textSize="13dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imgContactUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_marginEnd="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgContact"
        imageUrl="@{UserInfoModel.avatar}"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/chat_container"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:src="@drawable/ic_launcher_background" />

</RelativeLayout>
</layout>